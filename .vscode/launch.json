{
   "version": "0.2.0",
   "configurations": [
      {
         "name": "(gdb) with ai",
         "type": "cppdbg",
         "request": "launch",
         "program": "${workspaceFolder}/../arnd/bin/${fileBasenameNoExtension}", // Path to your executable
         "args": [], // Add any command-line arguments if needed
         "stopAtEntry": false,
         "cwd": "${workspaceFolder}/../arnd",
         "environment": [],
         "externalConsole": false,
         "MIMode": "gdb", // or "lldb" if using lldb
         "setupCommands": [
            {
               "description": "Enable pretty-printing for gdb",
               "text": "-enable-pretty-printing",
               "ignoreFailures": true
            }
         ],
         // "miDebuggerPath": "/usr/bin/gdb", // Path to gdb, modify if necessary
         "miDebuggerPath": "${workspaceFolder}/gdb_sudo.sh", // Path to gdb, modify if necessary
         "preLaunchTask": "ai_task", //  run ai
         // "internalConsoleOptions": "openOnSessionStart"
         "internalConsoleOptions": "neverOpen" // This prevents the Debug Console from opening automatically
      },
      {
         "name": "g++ build and debug active file",
         "type": "cppdbg",
         "request": "launch",
         "program": "${fileDirname}/${fileBasenameNoExtension}.out",
         "args": [],
         "stopAtEntry": false,
         "cwd": "${workspaceFolder}",
         "environment": [],
         "externalConsole": false,
         "MIMode": "gdb",
         "setupCommands": [
            {
               "description": "Enable pretty-printing for gdb",
               "text": "-enable-pretty-printing",
               "ignoreFailures": true
            }
         ],
         "preLaunchTask": "gcc_task",
         "miDebuggerPath": "/usr/bin/gdb",
         "internalConsoleOptions": "openOnSessionStart"
      }
   ]
}