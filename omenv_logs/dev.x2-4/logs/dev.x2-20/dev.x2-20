#!/usr/bin/env bash
#
cd release
export PATH=bin:$PATH
function start_x2 {
    echo "Starting x2..."
    x2sup -proc:dev-x2-4.x2sup-3-0 -daemon
}
#
function format_x2 {
    echo "Formatting x2..."
dirs=$(cat data/x2db/storage.ssim | grep x2cmt-3- | cut -d':' -f3 | cut -d' ' -f1)
for dir in $dirs; do
    echo Copying x2fs to $dir
    mkdir -p $dir
    rm -fr $dir/*
    cp -r x2fs/* $dir
done
}
#
function stop_x2 {
    echo "Stopping x2..."
    killall -9 x2sup 1>/dev/null 2>/dev/null  || { echo "====Was not running"; }
}
#
function status_x2 {
    echo "Checking status x2..."
    lsof -P -i :1558 || { echo "====Not running"; }
}
